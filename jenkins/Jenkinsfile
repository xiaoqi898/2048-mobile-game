pipeline {
    agent any

    environment {
        DOCKER_IMAGE = 'xiaoqi898/2048-mobile-game'
        DOCKER_TAG = "${env.BUILD_NUMBER}"
        KUBECONFIG = credentials('k8s-config')
        REGISTRY = 'docker.io'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} ."
                    sh "docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest"
                }
            }
        }

        stage('Push to Registry') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-registry', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh """
                            docker login ${REGISTRY} -u ${DOCKER_USER} -p ${DOCKER_PASS}
                            docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                            docker push ${DOCKER_IMAGE}:latest
                        """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    withKubeConfig([credentialsId: 'k8s-config']) {
                        sh """
                            kubectl apply -f jenkins/k8s-deployment.yaml
                            kubectl apply -f jenkins/k8s-service.yaml
                            kubectl set image deployment/2048-game 2048-game=${DOCKER_IMAGE}:${DOCKER_TAG} -n default
                        """
                    }
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    sh 'sleep 10'
                    sh 'kubectl get pods -n default | grep 2048-game'
                    sh 'kubectl get svc -n default | grep 2048-game'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
        always {
            cleanWs()
        }
    }
}
